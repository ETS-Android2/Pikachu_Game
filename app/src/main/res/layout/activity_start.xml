<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Start">

    <ImageView
        android:id="@+id/panel_IMG_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/start_LAY_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="50dp">

        <TextView
            android:id="@+id/start_TXT_pikachu"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_marginBottom="50dp"
            android:text="Pikachu"
            android:textColor="@color/white"
            android:textSize="64sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/start_BTN_play"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@color/white"
            android:text="play game"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/start_BTN_playSensor"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@color/white"
            android:text="play sensors game"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/start_BTN_top_10"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="top 10"
            android:textColor="@color/black" />

    </LinearLayout>
</RelativeLayout>